extends ../layout.jade

block meta
block link
block title
block navbar-header
block subnavbar-header

block content
  each proyect in proyecto
    div(class="main")
      div(class="main-inner")
        div(class="container")
          div(class="row")
            div(class="span12")
              div(class="widget widget-nopad")
                div(class="widget-header")
                  i(class="icon-list-alt")
                  h3 Tarjetas de proyectos
                div(class="widget-content")
                  div(class="widget big-stats-container" style="padding: 15px;")
                    ul(class="messages_layout")
                      li(class="from_user left")
                        a(href="#" class="avatar")
                          img(src="../images/message_avatar1.png")
                        div(class="message_wrap") 
                          span(class="arrow")
                          div(class="info")
                            h3 Scrum Master: #{proyect.proyectManager.nombre}
                          div(class="text") 
                            h4 #{proyect.nombreProyecto}
                            div(style="padding-top: 10px;")
                              p Fecha de solicitud: #{proyect.fechaSolicitud}
                              p Fecha de inicio: #{proyect.fechaArranque}
                              p Descripción del proyecto: #{proyect.descripcion}
                            div
                              a(href="#agregarProjectOwner" role="button" class="btn btn-primary" data-toggle="modal") Asignar Project Owner
                              a(href="#agregarDevelopers" role="button" class="btn btn-success" data-toggle="modal" style="margin-left: 15px;") Agregar Developers 
                              a(href="#eliminarProyeto" role="button" class="btn btn-danger" data-toggle="modal" style="margin-left: 15px;") Eliminar proyecto
                          
    // Modal para agregar el Proyecto Owner.
    div(id="agregarProjectOwner" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true")
      div(class="modal-header")
        button(type="button" class="close" data-dismiss="modal" aria-hidden="true") ×
        h3 Agregar Project Owner
      div(class="modal-body")
        div(class="widget widget-table action-table")
          div(class="widget-header") 
            i(class="icon-th-list")
            h3 Lista de candidatos
          div(class="widget-content")
            table(class="table table-striped table-bordered")
              thead
                tr
                  th Nombre completo 
                  th(class="td-actions") Agregar
              tbody
                tr
                  td Nombre del Project Owner 
                  td(class="td-actions")
                    a(href="#" class="btn btn-small btn-success")
                      i(class="btn-icon-only icon-ok")

      div(class="modal-footer")
        button(class="btn" data-dismiss="modal" aria-hidden="true") Cancelar
        input(type="submit" class="btn btn-primary" value="Guardar")

    div(id="agregarDevelopers" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true")
      div(class="modal-header")
        button(type="button" class="close" data-dismiss="modal" aria-hidden="true") ×
        h3 Agregar Developers
      div(class="modal-body")
        div(class="widget widget-table action-table")
          div(class="widget-header") 
            i(class="icon-th-list")
            h3 Lista de candidatos
          div(class="widget-content")
            table(class="table table-striped table-bordered")
              thead
                tr
                  th Nombre completo 
                  th(class="td-actions") Agregar
              tbody
                tr
                  td Nombre del Developer 
                  td(class="td-actions")
                    a(href="#" class="btn btn-small btn-success")
                      i(class="btn-icon-only icon-ok")

      div(class="modal-footer")
        button(class="btn" data-dismiss="modal" aria-hidden="true") Cancelar
        input(type="submit" class="btn btn-primary" value="Guardar")   
        
    div(id="eliminarProyeto" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true")
      div(class="modal-header")
        button(type="button" class="close" data-dismiss="modal" aria-hidden="true") ×
        h3 Eliminar proyecto
      div(class="modal-body")
        p ¿Estás seguro de eliminar el proyecto?
      div(class="modal-footer")
        button(class="btn btn-success" data-dismiss="modal" aria-hidden="true") No
        input(type="submit" class="btn btn-danger" value="Sí")  
         
